<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Survey Results
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">

          <div class="well">
                    <div class="row">
                      <div class="col-md-12">
                          <table class="table table-striped">
                              <thead>
                                <tr>
                                  <th></th>
                                  <th>Survey Title</th>
                                  <th>Username</th>
                                  <th>Question</th>
                                  <th>Answer</th>
                                  <th></th>
                                </tr>
                              </thead>
                              <tbody>
                                <% @surveys.each do |survey| %>
                                  <tr>
                                    <td></td>
                                    <td><%= Survey.where(id: survey.survey_id).first.title %></td>
                                    <td>
                                      <% if survey.user_id == -1 %>
                                        Unregistered Surveyor
                                      <% else %>
                                        <%= User.where(id: survey.user_id).first.username %>
                                      <% end %>

                                    </td>
                                    <td><%= SurveyQuestion.where(id: survey.survey_question_id).first.question %></td>
                                    <td><%= SurveyAnswer.where(id: survey.survey_answer_id).first.answer %></td>
                                    <td>
                                    </td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                          </div>
                    </div>
                </div>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
