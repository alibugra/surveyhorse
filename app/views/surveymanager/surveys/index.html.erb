<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Survey List
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">

          <div class="well">
                    <div class="row">
                      <div class="col-md-12">
                          <table class="table table-striped">
                              <thead>
                                <tr>
                                  <th></th>
                                  <th>Survey Title</th>
                                  <th>Number of Questions</th>
                                  <th>Status</th>
                                  <th></th>
                                </tr>
                              </thead>
                              <tbody>
                                <% @surveys.each do |survey| %>
                                  <tr>
                                    <td></td>
                                    <td><%= survey.title %></td>
                                    <td><%= survey.survey_questions.count %></td>
                                    <td><%= survey.status %></td>
                                    <td></td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                          </div>
                    </div>
                </div>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
