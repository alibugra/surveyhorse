<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Manage Users
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">

          <div class="well">
                    <div class="row">
                      <div class="col-md-12">
                          <table class="table table-striped">
                              <thead>
                                <tr>
                                  <th></th>
                                  <th>Username</th>
                                  <th>E-mail</th>
                                  <th>Type</th>
                                  <th></th>
                                </tr>
                              </thead>
                              <tbody>
                                <% @users.each do |user| %>
                                  <tr>
                                    <td></td>
                                    <td><%= user.username %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                      <% if user.role == 1 then %>Surveyor<% end %>
                                      <% if user.role == 2 then %>Survey Manager<% end %>
                                    </td>
                                    <td>
                                      <%= link_to "Edit", sysadmin_edit_user_path(user), class: 'btn btn-primary' %>
                                      <%= form_tag sysadmin_delete_user_path, {:style => "display:inline;"} do %>
                                        <%= hidden_field_tag :user_id, user.id %>
                                        <%= button_tag 'Delete', class: 'btn btn-primary', data: { confirm: 'Confirm to delete this user ?' } %>
                                      <% end %>
                                    </td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                          </div>
                    </div>
                </div>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
