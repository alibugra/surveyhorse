<!-- Modal -->
<div id="registerModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Register</h4>
      </div>
      <div class="modal-body">

        <%= form_tag signup_path, {class: "form"} do %>
          <div class="form-group">
              <label for="InputUserName">Username</label>
              <%= text_field_tag(:username, params[:username], {class: "form-control"}) %>
          </div>
          <div class="form-group">
              <label for="InputFirstName">Email</label>
              <%= text_field_tag(:email, params[:email], {class: "form-control"}) %>
          </div>
          <div class="form-group">
              <label for="InputPassword">Password</label>
              <%= password_field_tag :password, nil, {class: "form-control"} %>
          </div>
          <div class="form-group">
              <label for="InputPassword">Type</label>
              <%= select_tag "role", options_from_collection_for_select(Role.all.order('name desc'), "role_id", "name"),  { :class => 'form-control'}  %>
          </div>
           <button type="submit" class="btn btn-default">Register</button>
       <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

