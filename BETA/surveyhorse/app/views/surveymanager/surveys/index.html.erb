<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Survey List
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-12">

          <div class="well">
                    <div class="row">
                      <div class="col-md-12">
                          <table class="table table-striped">
                              <thead>
                                <tr>
                                  <th></th>
                                  <th>Survey Title</th>
                                  <th>Number of Questions</th>
                                  <th>Unregistered Link</th>
                                  <th></th>
                                </tr>
                              </thead>
                              <tbody>
                                <% @surveys.each do |survey| %>
                                  <tr>
                                    <td></td>
                                    <td><%= survey.title %></td>
                                    <td><%= survey.survey_questions.count %></td>
                                    <td>http://localhost:3001/anonymous/surveys/<%= survey.id %>/fill</td>
                                    <td>
                                      <%= link_to "Edit", surveymanager_edit_survey_path(survey), class: 'btn btn-primary' %>
                                      <%= form_tag surveymanager_delete_survey_path, {:style => "display:inline;"} do %>
                                        <%= hidden_field_tag :survey_id, survey.id %>
                                        <%= button_tag 'Delete', class: 'btn btn-primary', data: { confirm: 'Confirm to delete this survey ?' } %>
                                      <% end %>
                                    </td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                          </div>
                    </div>
                </div>

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
