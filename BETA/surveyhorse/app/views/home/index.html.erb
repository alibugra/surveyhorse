<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="page-header"></h2>
      <% if flash[:notice] == "not_logged" %>
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            Please check your username and password!
        </div>
      <% elsif flash[:notice] == "logged" %>
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
            Welcome <%=current_user.username%>, you have successfully logged in.
        </div>
      <% end %>
      <% if signed_in? %>
        <h1>Welcome to SurveyHorse</h1>
      <% else %>
        <h1>Welcome to SurveyHorse</h1>
        <p>Please register and continue with creating a new survey !</p>
        <p>Crazy horse brotherhood</p>
        <p>This is my turn</p>
        <p>See you My Horse</p>
      <% end %>
    </div>
  </div>
